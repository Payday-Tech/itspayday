# reCAPTCHA v2 secret key (server-side)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://your-netlify-domain.netlify.app

# Environment (development/production)
ENVIRONMENT=development

# Google Sheets integration
# Service account JSON credentials (paste the entire JSON as a single line)
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"...","private_key":"..."}
# Spreadsheet ID (from the URL: https://docs.google.com/spreadsheets/d/SPREADSHEET_ID/edit)
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here
